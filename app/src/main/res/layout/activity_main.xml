<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp">

            <ImageView
                android:id="@+id/Home_ImgV1"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/reactivate_banner_1920x1080" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"></LinearLayout>

            <TextView
                android:id="@+id/Home_TxtV1"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center"
                android:text="Registrate como proveedor y ofrece tus servicios."
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:onClick="iniciarLogin"
                android:text="@string/create_perfil"
                app:cornerRadius="50dp" />
            <Button
                android:id="@+id/btnPrueba"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:padding="5sp"
                android:text="Prueba Recycler"
                android:onClick="iniciarPrueba"
                android:textColor="@color/black"
                app:cornerRadius="50dp"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#000000"
                android:backgroundTint="#000000" />

            <TextView
                android:id="@+id/Home_TxtV2"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center"
                android:text="Encuentra el experto o profesional que necesitas"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:visibility="visible"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <ImageButton
                            android:id="@+id/Home_ImgB1"
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:layout_weight="1"
                            android:backgroundTint="#00FFFFFF"
                            android:onClick="iniciarSelected"
                            android:paddingLeft="5dp"
                            android:paddingTop="5dp"
                            android:paddingRight="5dp"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/reactivate_seccion_03_03_asesoria_juridica" />

                        <ImageButton
                            android:id="@+id/Home_ImgB2"
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:layout_weight="1"
                            android:backgroundTint="#00FFFFFF"
                            android:paddingLeft="5dp"
                            android:paddingTop="5dp"
                            android:paddingRight="5dp"
                            android:scaleType="fitXY"
                            android:onClick="iniciarSelected"
                            app:srcCompat="@drawable/reactivate_seccion_03_04_cuidado_de_mascotas" />

                        <ImageButton
                            android:id="@+id/Home_ImgB5"
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:layout_weight="1"
                            android:backgroundTint="#00FFFFFF"
                            android:paddingLeft="5dp"
                            android:paddingTop="5dp"
                            android:paddingRight="5dp"
                            android:scaleType="fitXY"
                            android:onClick="iniciarSelected"
                            app:srcCompat="@drawable/reactivate_seccion_03_04_restaurantes" />

                        <ImageButton
                            android:id="@+id/Home_ImgB7"
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:layout_weight="1"
                            android:backgroundTint="#00FFFFFF"
                            android:paddingLeft="5dp"
                            android:paddingTop="5dp"
                            android:paddingRight="5dp"
                            android:scaleType="fitXY"
                            android:onClick="iniciarSelected"
                            app:srcCompat="@drawable/reactivate_seccion_03_07_arquitectura_construccion" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/Home_TxtV3"
                            android:layout_width="200dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:gravity="center_horizontal|top"
                            android:text="Leyes"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/Home_TxtV4"
                            android:layout_width="200dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:gravity="center_horizontal|top"
                            android:text="Veterinaria"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/Home_TxtV7"
                            android:layout_width="200dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:gravity="center_horizontal|top"
                            android:text="Restaurantes"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/Home_TxtV9"
                            android:layout_width="200dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:gravity="center_horizontal|top"
                            android:text="DiseÃ±o y Arquitectura"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/Home_ImgB3"
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:layout_weight="1"
                            android:backgroundTint="#00FFFFFF"
                            android:paddingLeft="5dp"
                            android:paddingTop="5dp"
                            android:paddingRight="5dp"
                            android:scaleType="fitXY"
                            android:onClick="iniciarSelected"
                            app:srcCompat="@drawable/reactivate_seccion_03_05_cuidado_de_muebles" />

                        <ImageButton
                            android:id="@+id/Home_ImgB4"
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:layout_weight="1"
                            android:backgroundTint="#00FFFFFF"
                            android:paddingLeft="5dp"
                            android:paddingTop="5dp"
                            android:paddingRight="5dp"
                            android:scaleType="fitXY"
                            android:onClick="iniciarSelected"
                            app:srcCompat="@drawable/reactivate_seccion_03_06_gimnasios_entrenadores_personales" />

                        <ImageButton
                            android:id="@+id/Home_ImgB6"
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:layout_weight="1"
                            android:backgroundTint="#00FFFFFF"
                            android:paddingLeft="5dp"
                            android:paddingTop="5dp"
                            android:paddingRight="5dp"
                            android:scaleType="fitXY"
                            android:onClick="iniciarSelected"
                            app:srcCompat="@drawable/reactivate_seccion_03_09_electricistas" />

                        <ImageButton
                            android:id="@+id/Home_ImgB8"
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:layout_weight="1"
                            android:backgroundTint="#00FFFFFF"
                            android:paddingLeft="5dp"
                            android:paddingTop="5dp"
                            android:paddingRight="5dp"
                            android:scaleType="fitXY"
                            android:onClick="iniciarSelected"
                            app:srcCompat="@drawable/reactivate_seccion_03_02_marketing_digital" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/Home_TxtV5"
                            android:layout_width="200dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:gravity="center_horizontal|top"
                            android:text="Arte en Madera"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/Home_TxtV6"
                            android:layout_width="200dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:gravity="center_horizontal|top"
                            android:text="Entrenamiento Fisico"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/Home_TxtV8"
                            android:layout_width="200dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:gravity="center_horizontal|top"
                            android:text="Electricidad"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/Home_TxtV10"
                            android:layout_width="200dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:gravity="center_horizontal|top"
                            android:text="Marketing Digital"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>